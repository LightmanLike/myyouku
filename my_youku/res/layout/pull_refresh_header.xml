<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="#e2e2e2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="8dip"
    android:paddingTop="5dip" 
    android:id="@+id/pull_refresh_header">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pull_to_refresh_youku_logo" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_ptr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_ptr_drawable" 
            android:layout_toLeftOf="@+id/ll_ptr"/>

        <LinearLayout
            android:id="@+id/ll_ptr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/tv_ptr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉刷新"
                android:textColor="#bfbfbf"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>